@model  IEnumerable<Chat.Models.ChatRoomMessageViewModel>
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_ChatLayout.cshtml";
}

<h2>Chat</h2>
<div class="container">
    @Html.ActionLink("Exit", "ChatRoomsList", "ChatRoom")
    <div id="chatMessages">
        @Html.Partial("MessagesTable", Model)
    </div>

    <div class="form">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" class="btn"/>
        <input type="hidden" id="displayname"/>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function (e) {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                //$('#discussion').append('<li><strong>' + htmlEncode(name)
                //    + '</strong>: ' + htmlEncode(message) + '</li>');

                $.ajax({
                    async: true,
                    method: "GET",
                    url: "/ChatRoom/GetChatRoomMessagesTable",
                }
                ).done(function (partialViewResult) {
                    $("#chatMessages").html(partialViewResult);
                    });
            
            };
            // Get the user name and store it to prepend to messages.
            //$('#displayname').val(prompt('Enter your name:', ''));


            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    var message = $('#message').val();
                    chat.server.send($('#displayname').val(), message);
                    SaveMessage(message)
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });

        function SaveMessage(message) {
            $('#message').val()

            $.ajax({
                async: true,
                method: "POST",
                url: "/ChatRoom/SaveMessage",
                data: { message: message }
            }
            );
        }
    </script>
}
